{
  "name": "vscode-git-quick-merge",
  "displayName": "Git Quick Merge",
  "description": "快速合并Git分支到指定分支的VSCode插件",
  "version": "1.0.2",
  "author": "MingNeo",
  "publisher": "MingNeo",
  "license": "MIT",
  "engines": {
    "vscode": "^1.90.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onStartupFinished"
  ],
  "main": "./out/extension.js",
  "icon": "media/icon.png",
  "contributes": {
    "commands": [
      {
        "command": "gitQuickMerge.quick-merge-to",
        "title": "合并分支到指定分支"
      },
      {
        "command": "gitQuickMerge.cleanup-stale-worktrees",
        "title": "清理历史残留的 Worktrees"
      }
    ],
    "configuration": {
      "title": "Git Quick Merge",
      "properties": {
        "gitQuickMerge.branches": {
          "type": "array",
          "default": [
            "develop",
            "master",
            "main"
          ],
          "description": "可选的目标分支列表 - 合并时可以选择的目标分支",
          "items": {
            "type": "string",
            "description": "分支名称"
          },
          "uniqueItems": true,
          "minItems": 1
        },
        "gitQuickMerge.skipStaleWorktreeCheck": {
          "type": "boolean",
          "default": false,
          "description": "是否跳过启动时检查历史残留的 worktree 目录"
        },
        "gitQuickMerge.remoteRepoName": {
          "type": "string",
          "default": "origin",
          "description": "远程仓库名称，默认为 origin"
        }
      }
    }
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/MingNeo/vscode-git-quick-merge"
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src --ext ts",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/mocha": "^10.0.6",
    "@types/node": "20.x",
    "@types/vscode": "^1.90.0",
    "@typescript-eslint/eslint-plugin": "^7.11.0",
    "@typescript-eslint/parser": "^7.11.0",
    "@vscode/test-cli": "^0.0.9",
    "@vscode/test-electron": "^2.4.0",
    "eslint": "^8.57.0",
    "typescript": "^5.4.5"
  },
  "dependencies": {
    "@types/js-yaml": "^4.0.9",
    "js-yaml": "^4.1.0"
  }
}
