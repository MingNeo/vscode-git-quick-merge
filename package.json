{
  "name": "vscode-git-quick-merge",
  "displayName": "%displayName%",
  "description": "%description%",
  "version": "1.0.3",
  "author": "MingNeo",
  "publisher": "MingNeo",
  "license": "MIT",
  "engines": {
    "vscode": "^1.90.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onStartupFinished"
  ],
  "main": "./out/extension.js",
  "icon": "media/icon.png",
  "contributes": {
    "commands": [
      {
        "command": "gitQuickMerge.quick-merge-to",
        "title": "%command.quickMergeTo.title%"
      },
      {
        "command": "gitQuickMerge.cleanup-stale-worktrees",
        "title": "%command.cleanupStaleWorktrees.title%"
      }
    ],
    "configuration": {
      "title": "%config.title%",
      "properties": {
        "gitQuickMerge.branches": {
          "type": "array",
          "default": [
            "develop",
            "release",
            "master"
          ],
          "description": "%config.branches.description%",
          "items": {
            "type": "string",
            "description": "%config.branches.items.description%"
          },
          "uniqueItems": true,
          "minItems": 1
        },
        "gitQuickMerge.skipStaleWorktreeCheck": {
          "type": "boolean",
          "default": false,
          "description": "%config.skipStaleWorktreeCheck.description%"
        },
        "gitQuickMerge.remoteRepoName": {
          "type": "string",
          "default": "origin",
          "description": "%config.remoteRepoName.description%"
        }
      }
    }
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/MingNeo/vscode-git-quick-merge"
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src --ext ts",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/mocha": "^10.0.6",
    "@types/node": "20.x",
    "@types/vscode": "^1.90.0",
    "@typescript-eslint/eslint-plugin": "^7.11.0",
    "@typescript-eslint/parser": "^7.11.0",
    "@vscode/test-cli": "^0.0.9",
    "@vscode/test-electron": "^2.4.0",
    "eslint": "^8.57.0",
    "typescript": "^5.4.5"
  },
  "dependencies": {
    "@types/js-yaml": "^4.0.9",
    "js-yaml": "^4.1.0"
  }
}
